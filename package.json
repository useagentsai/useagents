{
  "name": "nt3",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "manypkg:check": "manypkg check",
    "manypkg:fix": "manypkg fix",
    "dev:web": "turbo run dev --filter=@nt3/web",
    "build:web": "turbo run build --filter=@nt3/web",
    "start:web": "turbo run start --filter=@nt3/web"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@manypkg/cli": "^0.25.1",
    "turbo": "^2.6.0",
    "typescript": "5.9.2",
    "ultracite": "6.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
